<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_titlebar"></include>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/iv_shop_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/img_no_url" />
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_shop_pic"
            android:layout_marginLeft="7dp"
            android:text="蜂店"
            android:textSize="18sp"
            android:textColor="@color/text_color_black"
            />
        <TextView
            android:id="@+id/tv_shop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_shop_name"
            android:layout_toRightOf="@+id/iv_shop_pic"
            android:layout_marginLeft="7dp"
            android:text="门店类型：个人"
            android:textSize="15sp"
            android:textColor="@color/grey_969696"
            />

        <TextView
            android:id="@+id/tv_shop_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_shop_name"
            android:layout_toRightOf="@+id/tv_shop_type"
            android:layout_marginLeft="10dp"
            android:text="门店状态：营业"
            android:textSize="15sp"
            android:textColor="@color/grey_969696"
            />
        <TextView
            android:id="@+id/tv_shop_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_shop_type"
            android:layout_toRightOf="@+id/iv_shop_pic"
            android:layout_marginLeft="7dp"
            android:text="注册时间：2018-5-25"
            android:textSize="15sp"
            android:textColor="@color/grey_969696"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_CFCFCF"
            ></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_shop_info"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/star1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:text="门店信息"
            android:textSize="18sp"
            android:textColor="@color/text_color_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow1"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:text="编辑"
            android:textSize="16sp"
            android:textColor="@color/grey_969696"
            />

        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_CFCFCF"
            ></View>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_shop_photo"
        android:background="@color/white"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/star2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:text="门店相册"
            android:textSize="18sp"
            android:textColor="@color/text_color_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow2"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:text="编辑"
            android:textSize="16sp"
            android:textColor="@color/grey_969696"
            />

        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_CFCFCF"
            ></View>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_shop_product"
        android:background="@color/white"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/star3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:text="门店产品"
            android:textSize="18sp"
            android:textColor="@color/text_color_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow3"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:text="编辑"
            android:textSize="16sp"
            android:textColor="@color/grey_969696"
            />

        <ImageView
            android:id="@+id/arrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_CFCFCF"
            ></View>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_vip_type"
        android:background="@color/white"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/star4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:text="会员分类"
            android:textSize="18sp"
            android:textColor="@color/text_color_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow4"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:text="编辑"
            android:textSize="16sp"
            android:textColor="@color/grey_969696"
            />

        <ImageView
            android:id="@+id/arrow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_CFCFCF"
            ></View>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_shop_vip"
        android:background="@color/white"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_star" />

        <TextView
            android:id="@+id/tv_tool_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/star5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:text="门店会员"
            android:textSize="18sp"
            android:textColor="@color/text_color_black"
            />

        <TextView
            android:id="@+id/tv_tool_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow5"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:text="编辑"
            android:textSize="16sp"
            android:textColor="@color/grey_969696"
            />

        <ImageView
            android:id="@+id/arrow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_CFCFCF"
            ></View>

    </RelativeLayout>
</LinearLayout>