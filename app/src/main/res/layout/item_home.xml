<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/rl_shop"
    >
    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/img_no_url"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_alignTop="@+id/iv_shop"
        android:text="蜂店"
        android:textColor="@color/text_color_black"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/iv_shop"
        android:layout_marginLeft="6dp"
        />
    <TextView
        android:id="@+id/tv_shop_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="蜂店这是一家非常好的店蜂店这是一家非常好的店蜂店这是一家非常好的店蜂店这是一家非常好的店蜂店这是一家非常好的店"
        android:textColor="@color/text_color_gray"
        android:textSize="15sp"
        android:lines="3"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_shop"
        android:layout_below="@+id/tv_shop_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="6dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/background_color"
        android:layout_below="@+id/iv_shop"
        ></View>
</RelativeLayout>