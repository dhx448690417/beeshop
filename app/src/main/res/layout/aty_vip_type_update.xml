<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_titlebar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="会员名称"
            android:textColor="@color/text_color_black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_vip_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="110dp"
            android:textColorHint="@color/text_color_gray"
            android:hint="请输入会员名称"
            android:textSize="16sp"
            android:text=""
            android:textColor="@color/text_color_black"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_color"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="排序值"
            android:textColor="@color/text_color_black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_sort_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="110dp"
            android:textColorHint="@color/text_color_gray"
            android:hint="请输入排序值"
            android:inputType="number"
            android:textSize="16sp"
            android:text=""
            android:textColor="@color/text_color_black"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_color"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/white"
        >

    <EditText
        android:id="@+id/et_vip_type_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/text_color_gray"
        android:maxLength="200"
        android:hint="请输入会员类别描述"
        android:textSize="16sp"
        android:text=""
        android:textColor="@color/text_color_black"
        />
        <TextView
            android:id="@+id/tv_introduce_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="0/200"
            android:textColor="@color/text_color_black"
            android:textSize="14sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_green_radius_bg"
        android:gravity="center"
        android:text="提   交"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
</LinearLayout>