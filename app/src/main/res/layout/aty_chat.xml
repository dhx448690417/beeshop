<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/view_titlebar"></include>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <WebView
                android:id="@+id/wv_chat"
                android:layout_width="match_parent" android:layout_height="match_parent"></WebView>
        <com.beeshop.beeshop.views.StatusView
                android:id="@+id/status_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="#fff"
                app:infoImage="@drawable/no_data"
                app:infoText="没有相关数据"/>
    </RelativeLayout>

</LinearLayout>