<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_titlebar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="姓名"
                    android:textColor="@color/text_color_black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_vip_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginLeft="110dp"
                    android:textColorHint="@color/text_color_gray"
                    android:hint="请输入会员姓名"
                    android:textSize="16sp"
                    android:text=""
                    android:textColor="@color/text_color_black"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background_color"></View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="手机号"
                    android:textColor="@color/text_color_black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginLeft="110dp"
                    android:textColorHint="@color/text_color_gray"
                    android:hint="请输入手机号"
                    android:textSize="16sp"
                    android:text=""
                    android:textColor="@color/text_color_black"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background_color"></View>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:id="@+id/rl_vip_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_vip_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="会员消费"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />
                    <View
                        android:id="@+id/v_vip_pay"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:visibility="visible"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorAccent"></View>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_vip_recharge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_vip_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="会员充值"
                        android:textColor="@color/text_color_black"
                        android:textSize="18sp" />
                    <View
                        android:id="@+id/v_vip_recharge"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorAccent"></View>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_vip_update"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_vip_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="会员编辑"
                        android:textColor="@color/text_color_black"
                        android:textSize="18sp" />
                    <View
                        android:id="@+id/v_vip_edit"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorAccent"></View>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/background_color"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_vip_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="会员类别"
                            android:textColor="@color/text_color_black"
                            android:textSize="18sp" />

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/ns_vip_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="110dp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/background_color"></View>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="会员备注"
                            android:textColor="@color/text_color_black"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:layout_marginLeft="110dp"
                            android:textColorHint="@color/text_color_gray"
                            android:hint="请输入备注"
                            android:inputType="textPassword"
                            android:textSize="16sp"
                            android:text=""
                            android:textColor="@color/text_color_black"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/background_color"></View>
                    </RelativeLayout>



                    <TextView
                        android:id="@+id/tv_update"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_green_radius_bg"
                        android:gravity="center"
                        android:text="更   新"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_vip_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="充值金额"
                            android:textColor="@color/text_color_black"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_recharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:layout_marginLeft="110dp"
                            android:textColorHint="@color/text_color_gray"
                            android:hint="请输入充值金额"
                            android:inputType="textPassword"
                            android:textSize="16sp"
                            android:text=""
                            android:textColor="@color/text_color_black"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/background_color"></View>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="充值说明"
                            android:textColor="@color/text_color_black"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_recharge_explain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:layout_marginLeft="110dp"
                            android:textColorHint="@color/text_color_gray"
                            android:hint="请输入充值说明"
                            android:inputType="textPassword"
                            android:textSize="16sp"
                            android:text=""
                            android:textColor="@color/text_color_black"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/background_color"></View>
                    </RelativeLayout>



                    <TextView
                        android:id="@+id/tv_recharge"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_green_radius_bg"
                        android:gravity="center"
                        android:text="充   值"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_vip_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="消费金额"
                            android:textColor="@color/text_color_black"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_pay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:layout_marginLeft="110dp"
                            android:textColorHint="@color/text_color_gray"
                            android:hint="请输入消费金额"
                            android:inputType="textPassword"
                            android:textSize="16sp"
                            android:text=""
                            android:textColor="@color/text_color_black"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/background_color"></View>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="消费说明"
                            android:textColor="@color/text_color_black"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_pay_explain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:layout_marginLeft="110dp"
                            android:textColorHint="@color/text_color_gray"
                            android:hint="请输入消费说明"
                            android:inputType="textPassword"
                            android:textSize="16sp"
                            android:text=""
                            android:textColor="@color/text_color_black"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/background_color"></View>
                    </RelativeLayout>



                    <TextView
                        android:id="@+id/tv_pay"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_green_radius_bg"
                        android:gravity="center"
                        android:text="消   费"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/background_color"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:id="@+id/rl_recharge_record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_recharge_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="充值记录"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />
                    <View
                        android:id="@+id/v_recharge_record"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:visibility="visible"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorAccent"></View>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_pay_record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_pay_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="消费记录"
                        android:textColor="@color/text_color_black"
                        android:textSize="18sp" />
                    <View
                        android:id="@+id/v_pay_record"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorAccent"></View>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/background_color"></View>

            <com.beeshop.beeshop.views.ListViewForScrollView
                android:id="@+id/lvsv_record"
                android:divider="@null"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.beeshop.beeshop.views.ListViewForScrollView>

        </LinearLayout>
    </ScrollView>



</LinearLayout>