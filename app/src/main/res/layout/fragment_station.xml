<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="喇叭"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="22sp"
        />

    <RelativeLayout
    android:id="@+id/rl_shop_sort"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/dian_pu_pai_hang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_sort"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/dian_pu_pai_hang"
        android:layout_marginLeft="10dp"
        android:text="店铺排行"
        android:textColor="@color/text_color_black"
        android:textSize="18sp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_arrow"
        />
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_nearby_broadcast"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="55dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/fu_jin_guang_bo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_broacast"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fu_jin_guang_bo"
            android:layout_marginLeft="10dp"
            android:text="附近广播"
            android:textColor="@color/text_color_black"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_want_boradcast"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="55dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/wo_yao_guang_bo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_need_broadcast"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/wo_yao_guang_bo"
            android:layout_marginLeft="10dp"
            android:text="我要广播"
            android:textColor="@color/text_color_black"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow"
            />
    </RelativeLayout>
</LinearLayout>