<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:id="@+id/red_point"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:visibility="gone"
        android:layout_toRightOf="@+id/ll_tab"
        android:layout_alignTop="@+id/ll_tab"
        android:background="@drawable/shape_red_point"
        ></View>

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_home_normal" />

        <TextView
            android:id="@+id/tv_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:visibility="visible"
            android:layout_below="@+id/iv_tab_bottom"
            android:text=""
            android:textColor="@color/tab_text_color_normal"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>