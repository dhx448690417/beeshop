<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/view_titlebar"></include>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:visibility="visible"
                    android:background="@color/white">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="产品名称"
                        android:textColor="@color/text_color_black"
                        android:textSize="18sp"/>

                <EditText
                        android:id="@+id/et_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_marginLeft="110dp"
                        android:textColorHint="@color/text_color_gray"
                        android:lines="1"
                        android:maxLines="1"
                        android:hint="请输入产品名称或服务名称"
                        android:textSize="16sp"
                        android:text=""
                        android:textColor="@color/text_color_black"
                />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/background_color"></View>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:visibility="visible"
                    android:background="@color/white">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="产品单价"
                        android:textColor="@color/text_color_black"
                        android:textSize="18sp"/>

                <EditText
                        android:id="@+id/et_product_pirce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_marginLeft="110dp"
                        android:textColorHint="@color/text_color_gray"
                        android:lines="1"
                        android:maxLines="1"
                        android:hint="请输入产品单价，不填为面议"
                        android:textSize="16sp"
                        android:text=""
                        android:textColor="@color/text_color_black"
                />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/background_color"></View>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:visibility="visible"
                    android:background="@color/white">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="产品单位"
                        android:textColor="@color/text_color_black"
                        android:textSize="18sp"/>

                <EditText
                        android:id="@+id/et_product_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_marginLeft="110dp"
                        android:textColorHint="@color/text_color_gray"
                        android:lines="1"
                        android:maxLines="1"
                        android:hint="请输入产品产品计价单位，可选填"
                        android:textSize="16sp"
                        android:text=""
                        android:textColor="@color/text_color_black"
                />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/background_color"></View>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:visibility="visible"
                    android:background="@color/white">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="供应量"
                        android:textColor="@color/text_color_black"
                        android:textSize="18sp"/>

                <EditText
                        android:id="@+id/et_product_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_marginLeft="110dp"
                        android:textColorHint="@color/text_color_gray"
                        android:lines="1"
                        android:maxLines="1"
                        android:hint="请输入供应量，不填为大量供应"
                        android:textSize="16sp"
                        android:text=""
                        android:textColor="@color/text_color_black"
                />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/background_color"></View>
            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@color/white"
            >

                <EditText
                        android:id="@+id/et_product_describe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColorHint="@color/text_color_gray"
                        android:maxLength="120"
                        android:gravity="left"
                        android:hint="请输入产品描述"
                        android:textSize="16sp"
                        android:text=""
                        android:textColor="@color/text_color_black"
                />
                <TextView
                        android:id="@+id/tv_introduce_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="0/120"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
            >
                <TextView
                        android:id="@+id/upload_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="图片上传"
                        android:textColor="@color/text_color_black"
                        android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="0/2"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"/>

                <com.beeshop.beeshop.views.HorizontalPicAddGallery
                        android:id="@+id/hpag_add_pic"
                        android:layout_below="@+id/upload_pic"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/background_color"></View>

            </RelativeLayout>

            <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_green_radius_bg"
                    android:gravity="center"
                    android:text="提   交"
                    android:textColor="@color/white"
                    android:textSize="18sp"
            />
        </LinearLayout>
    </ScrollView>

</LinearLayout>